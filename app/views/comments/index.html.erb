<h1>Listing comments</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Website</th>
    <th>Author</th>
    <th>Post</th>
    <th>From author</th>
    <th>From owner</th>
    <th>Reviewed</th>
    <th>Approved</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.name %></td>
    <td><%= comment.last_name %></td>
    <td><%= comment.email %></td>
    <td><%= comment.website %></td>
    <td><%= comment.author %></td>
    <td><%= comment.post %></td>
    <td><%= comment.from_author %></td>
    <td><%= comment.from_owner %></td>
    <td><%= comment.reviewed %></td>
    <td><%= comment.approved %></td>
    <td><%= link_to 'Show', comment %></td>
    <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
    <td><%= link_to 'Destroy', comment, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

